<h2 class="sub-header"><%= @product.title %></h2>

<p>
  <strong>著書/アーティスト：</strong>
  <%= @product.author %>
</p>

<p>
  <strong>出版日/発売日：</strong>
  <%= @product.published_on.try(:strftime, '%Y年%m月') %>
</p>

<% if @product.type == 'Music' %>
  <p>
    <strong>再生時間：</strong>
    <%= @product.play_time %> 分
  </p>
<% end %>

<p>
  <strong>価格：</strong>
  <%= number_to_currency(@product.try(:price), precision: 0, unit: "円") %>
</p>

<%= link_to '購入する', new_order_path(product_id: @product.id), class: 'btn btn-default' %>
<%= link_to '戻る', products_path, class: 'btn btn-default' %>